
@model LoginViewModel

<div id="login" class="tab-pane active">
    <form class="dlab-form" asp-action="LoginConfirm" asp-controller="Account">
        <h3 class="form-title m-t0">خوش آمدید ، لطفاً به حساب خود وارد شوید</h3>
        <div class="text-center m-b20">
            <a href="#" class="site-button facebook btn-block"><i class="fa fa-facebook-official m-l10"></i> ورود از طریق فیسبوک</a>
        </div>
        <div class="form-group">
            <input asp-for="emailAddress" required class="form-control" placeholder="نام کاربری یا آدرس ایمیل" type="email" />
            <span asp-validation-for="emailAddress"></span>
        </div>
        <div class="form-group">
            <input asp-for="password" required class="form-control " placeholder="کلمه عبور" type="password" />
            <span asp-validation-for="password"></span>
            
        </div>
        <div class="form-group field-btn text-left">
            <div class="input-block">
                <input asp-for="rememberMe" id="check1" type="checkbox">
                <label for="check1">مرا به خاطر بسپار</label>
            </div>
            <a data-toggle="tab" href="#forgot-password" class="btn-link forgot-password"> رمز عبور را فراموش کرده اید</a>
        </div>
        <div class="form-group">
            <button class="site-button btn-block button-md">ورود</button>
        </div>
        <div class="form-group">
            <p class="info-bottom">حساب کاربری ندارید؟ <a data-toggle="tab" href="#register" class="btn-link">ثبت نام</a> </p>
        </div>
    </form>
</div>