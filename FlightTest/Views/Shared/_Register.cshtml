
@model RegisterViewModel
<div id="register" class="tab-pane fade">
    <form class="dlab-form" asp-action="RegisterConfirm" asp-controller="Account">
        <h3 class="form-title m-t0">یک حساب کاربری ایجاد کنید! این برنامه رایگان است و همیشه نیز خواهد بود.</h3>
        <div class="form-group">
            <input asp-for="emailAddress" required="" class="form-control" placeholder="آدرس ایمیل" type="email" />
            <span asp-validation-for="emailAddress"></span>
        </div>
        <div class="form-group">
            <input asp-for="password" required="" class="form-control" placeholder="کلمه عبور" type="password" />
            <span asp-validation-for="password"></span>
        </div>
        <div class="form-group">
            <input asp-for="rePassword" required="" class="form-control" placeholder="تکرار کلمه عبور" type="password" />
            <span asp-validation-for="rePassword"></span>
        </div>
        <div class="form-group">
            <input type="checkbox" id="privacy-policy">
            <label for="privacy-policy">من با شرایط <a href="#" class="btn-link">خدمات </a>و <a href="#" class="btn-link">سیاست حفظ حریم خصوصی موافقم </a></label>
        </div>
        <div class="form-group">
            <button class="site-button button-md btn-block">ارسال</button>
        </div>
        <div class="form-group">
            <p class="info-bottom">
                <a data-toggle="tab" href="#login" class="btn-link">با نام کاربری و رمز ورود وارد شوید؟</a>
            </p>
        </div>
    </form>
</div>