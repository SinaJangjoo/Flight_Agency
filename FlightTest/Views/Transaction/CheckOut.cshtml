@{
    Layout = null;
    var totalPrice =(int)TempData["totalPrice"] ;
}
@model TransactionViewModel

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Sina</title>
    <link rel="stylesheet" href="~/Dargah/style.css">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @*<link rel="shortcut icon" type="image/x-icon" href="~/Dargah/img/logo-web.jpeg" />*@
</head>
<body>
    <center>
        <form asp-action="CreateReservation" asp-controller="Reservation">
            <div class="box-1 col-4 d-flex flex-column justify-content-around mt-3 mb-3">
                <br><br>

                <div class="m-3"><img src="~/Dargah/img/s-dargah.png"></div>

                <div class="m-3"><h5>درگاه مالی یک پارچه با پروتکل های پرداخت امن</h5></div>
                <input type="text" value="true" asp-for="isAccepted" style="display:none" />
                <div class="bg-white d-flex flex-column">
                    <div class="p-3">
                        <p class="p-r">
                            : مبلغ قابل پرداخت
                        </p>
                        <span><label for="price">تومان</label></span>

                        <input id="price" asp-for="totalPaidPrice" type="text" readonly class="input-mablagh" value="@($"{totalPrice:0,0}")">
                    </div>

                    <div style="padding:0 1rem 1rem 1rem">
                        <p class="p-r">
                            شماره کارت 16 رقمی خود را وارد کنید
                        </p>
                        <input asp-for="cardNumber" type="text" class="form-control" placeholder="XXXX  XXXX  XXXX  XXXX">
                    </div>

                    <div class="d-flex flex-row justify-content-center align-items-baseline" style="padding:0 1rem 1rem 1rem">
                        <input type="text" class="form-control col-4" placeholder="CVV2">
                        <label class="p-3">: CVV2</label>
                    </div>

                    <div style="padding:0 1rem 1rem 1rem">
                        <p class="p-r">
                            درخواست پیامکی رمز پویا
                        </p>
                        <button class="btn btn-success col-4 mb-3">درخواست رمز</button>
                        <input type="text" class="input-phone" placeholder="رمز را وارد کنید">
                    </div>
                </div>

                <div class="m-2"><input type="submit" value="پرداخت" class="btn btn-primary col-6"></div>

            </div>
        </form>
    </center>
</body>
</html>